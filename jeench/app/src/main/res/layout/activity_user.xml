<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:fillViewport = "true">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "vertical"
        android:padding = "@dimen/padding_normal">

        <TextView
            android:id = "@+id/activity_users_detail_txt_name"
            style = "@style/TextViewUserActivity"
            android:text = "@string/txt_name_user"
            tools:text = "@string/lorem_ipsum"/>

        <TextView
            android:id = "@+id/activity_users_detail_txt_email"
            style = "@style/TextViewUserActivity"
            android:layout_marginTop = "@dimen/margin_normal"
            android:text = "@string/txt_email_user"
            tools:text = "@string/lorem_ipsum"/>

        <TextView
            android:id = "@+id/activity_users_detail_txt_address"
            style = "@style/TextViewUserActivity"
            android:layout_marginTop = "@dimen/margin_normal"
            android:text = "@string/txt_address_user"
            tools:text = "@string/lorem_ipsum"/>

        <RadioGroup
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "@dimen/margin_normal"
            android:checkedButton = "@+id/activity_users_detail_btn_albums"
            android:orientation = "vertical">

            <RadioButton
                android:id = "@+id/activity_users_detail_btn_albums"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "@string/txt_albums"/>

            <RadioButton
                android:id = "@+id/activity_users_detail_btn_posts"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text = "@string/txt_posts"/>
        </RadioGroup>

        <FrameLayout
            android:id = "@+id/activity_users_detail_frame"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent">
        </FrameLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>