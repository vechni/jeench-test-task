<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              xmlns:card_view = "http://schemas.android.com/apk/res-auto"
              xmlns:tools = "http://schemas.android.com/tools"
              android:layout_width = "match_parent"
              android:layout_height = "wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width = "match_parent"
        android:layout_height = "@dimen/height_item_user"
        card_view:cardBackgroundColor = "@color/teal"
        card_view:cardCornerRadius = "@dimen/card_radius"
        card_view:cardElevation = "@dimen/card_elevation">

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:gravity = "center_vertical"
            android:orientation = "horizontal">


            <TextView
                android:id = "@+id/item_user_txt_name"
                style = "@style/TextViewUserItem"
                android:text = "@string/txt_name_user"
                tools:text = "@string/lorem_ipsum"/>

            <TextView
                android:id = "@+id/item_user_txt_email"
                style = "@style/TextViewUserItem"
                android:text = "@string/txt_email_user"
                tools:text = "@string/lorem_ipsum"/>

            <TextView
                android:id = "@+id/item_user_txt_address"
                style = "@style/TextViewUserItem"
                android:text = "@string/txt_address_user"
                tools:text = "@string/lorem_ipsum"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>