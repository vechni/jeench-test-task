<resources>

    <!-- Base application theme. -->
    <style name = "AppTheme" parent = "Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>
    </style>

    <!-- Common -->
    <style name = "AppTextView">
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:ellipsize">end</item>
        <item name = "android:textSize">@dimen/size_text_normal</item>
    </style>

    <!-- User item -->
    <style name = "TextViewUserItem" parent = "AppTextView">
        <item name = "android:layout_width">0dp</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:maxLines">1</item>
        <item name = "android:textSize">@dimen/size_text_small</item>
        <item name = "android:paddingLeft">@dimen/padding_small</item>
        <item name = "android:paddingRight">@dimen/padding_small</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:gravity">left</item>
    </style>

    <!-- User detail activity -->
    <style name = "TextViewUserActivity" parent = "AppTextView">
        <item name = "android:maxLines">1</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:gravity">left</item>
    </style>

    <!-- Post dialog  -->
    <style name = "EditTextPostDialog">
        <item name = "android:layout_width">@dimen/width_edit_text_post_dialog</item>
        <item name = "android:layout_height">@dimen/height_edit_text_post_dialog</item>
        <item name = "android:layout_gravity">center</item>
    </style>

    <style name = "ButtonPostDialog">
        <item name = "android:layout_width">0dp</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:layout_weight">1</item>
        <item name = "android:background">@color/teal</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:textColor">@color/white</item>
    </style>

</resources>
